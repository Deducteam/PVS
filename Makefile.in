	$(LISPEXE) -eval '(load "pvs.system" :verbose t) \
                          (pvs::operate-on-system :pvs :compile) \
                          (quit)'
	$(LISPEXE) -eval '(load "pvs.system" :verbose t) \
                          (unwind-protect \
                              (pvs::operate-on-system :pvs :compile) \
                            (save-lisp "$(pvsfull).core" \
                                :init-function (function startup-pvs) \
                               ))'
	-rm $(PVSPATH)BDD/$(PLATFORM)/*.$(LISPEXT)
	cp $(PVSPATH)BDD/$(PLATFORM)/mu.$(LOAD-FOREIGN-EXTENSION) $(bindir)/full
	cp $(PVSPATH)BDD/bdd-cmu-load.lisp $(PVSPATH)BDD/mu-cmu-load.lisp $(bindir)/full
	cp $(PVSPATH)src/utils/$(PLATFORM)/b64 $(bindir)
	/bin/echo "#!/bin/sh" > $(pvsfull)
	/bin/echo "$(LISPEXE) -core \`dirname \$$0\`/\`basename \$$0\`.core \$\*" >> $(pvsfull)
	chmod a+x $(pvsfull)

$(PVSPATH)src/pvs-lexer.lisp : $(pvs-parser-in)
