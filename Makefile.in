.PHONY: all makefileutils makebdd makews1s make-release-notes clean
makefileutils :
	umask 002; \
	$(MAKE) -C src/utils/$(PLATFORM)
makebdd :
	umask 002; \
	$(MAKE) -C BDD/$(PLATFORM)
makews1s :
	umask 002; \
	(cd src/WS1S ; rm -rf mona ; ln -s mona-1.4 mona);\
	$(MAKE) -C src/WS1S/$(PLATFORM)

src/ics-interface/$(PLATFORM)/ics_lisp.so : src/ics-interface/$(PLATFORM)/ics_lisp_error.o @ICSLIB@/libics.a
	umask 002; \
	$(LD) -G -o $@ $< -L@ALLEGRODIR@ -l@ALLEGROLIB@ \
	      --whole-archive @ICSLIB@/libics.a --no-whole-archive

src/ics-interface/$(PLATFORM)/ics_lisp_error.o : src/ics-interface/ics_lisp_error.c
