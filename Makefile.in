              */*/*/*.{$(faslexts)} */*/*/*/*.{$(faslexts)} \
              */{$(platforms)}/*.o */*/{$(platforms)}/*.o

distclean :
	rm -f *.{$(faslexts)} */*.{$(faslexts)} */*/*.{$(faslexts)} \
              */*/*/*.{$(faslexts)} */*/*/*/*.{$(faslexts)} \
