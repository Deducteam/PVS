full : makefileutils makebdd makews1s ${pvsfull} ${emacs}

runtime : makefileutils makebdd makews1s ${pvsrt} ${emacs}

${pvsfull} : ${pvs-make-files} ${ess} ${ff-files} ${lisp-files} \
             lib/prelude.pvs lib/prelude.prf
	rm -rf ${bindir}/full
	umask 002; \
	$(PVSLISP) -e '(load "pvs.system")' \
		-e "(let ((code 1)) \
                      (unwind-protect \
                          (multiple-value-bind (v err) \
                            (ignore-errors (operate-on-system :pvs :compile)) \
                               (if err \
                                   (let ((*print-readably* nil)) \
                                     (format t \"~a\" err)) \
                                   (setq code 0)))) \
                        (excl:exit code)))"
	umask 002; $(ETAGS) ${lisp-files} ${pvs-emacs-src}
	touch src/pvs-lexer.${LISPEXT}
	umask 002; \
	$(PVSLISP) -e '(defvar *runtime* nil)' \
		-L src/make-pvs.lisp
	touch ${pvsfull}

${pvsrt} : ${pvs-make-files} ${ess} ${ff-files} ${lisp-files} \
           lib/prelude.pvs lib/prelude.prf
	rm -rf ${bindir}/runtime
	umask 002; \
	$(PVSLISP) -e '(load "pvs.system")' \
		-e "(let ((code 1)) \
                      (unwind-protect \
                          (multiple-value-bind (v err) \
                            (ignore-errors (operate-on-system :pvs :compile)) \
                               (if err \
                                   (let ((*print-readably* nil)) \
                                     (format t \"~a\" err)) \
                                   (setq code 0)))) \
                        (excl:exit code)))"
	umask 002; $(ETAGS) ${lisp-files} ${pvs-emacs-src}
	touch src/pvs-lexer.${LISPEXT}
	umask 002; \
	$(PVSLISP) -e '(defvar *runtime* t)' \
		-L src/make-pvs.lisp
	touch ${pvsrt}

