<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension point="org.eclipse.debug.core.launchConfigurationTypes">
   		<launchConfigurationType
	   		id="com.sri.csl.pvs.plugin.PVSLaunchType"
	   		name="PVS">
   		</launchConfigurationType>
	</extension>

	<extension point="org.eclipse.debug.core.launchModes">
		<launchMode
			label="Run"
			mode="run">
		</launchMode>
		<launchMode
			label="Debug"
			mode="debug">
		</launchMode>
	</extension>

	<extension point="org.eclipse.debug.core.launchDelegates">
	  <launchDelegate
	   id="com.sri.csl.pvs.plugin.PVSLaunchDelegate"
	   delegate="com.sri.csl.pvs.plugin.launch.PVSLaunchConfigurationDelegate"
	   type="com.sri.csl.pvs.plugin.PVSLaunchType"
	   modes="run">
	  </launchDelegate>
	 </extension>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="PVS Editor"
            extensions="pvs"
            icon="icons/pvslogod.png"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="com.sri.csl.pvs.plugin.editor.PVSEditor"
            id="com.sri.csl.pvs.plugin.editor.PVSEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="com.sri.csl.pvs.plugin.actionSet"
            label="PVS Action Set"
            visible="true">
         <menu
               id="pvsMenu"
               label="&amp;PVS">
            <separator
                  name="pvsGroup">
            </separator>
         </menu>
         <action
               class="com.sri.csl.pvs.plugin.action.PVSWindowActionDelegate"
               icon="icons/pvslogo.png"
               id="com.sri.csl.pvs.plugin.action.PVSWindowActionDelegate"
               label="&amp;Start PVS"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               tooltip="Start PVS">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.sri.csl.pvs.plugin.preferences.PVSPreferencePage"
            id="com.sri.csl.pvs.plugin.preferences.PVSPreferencePage"
            name="PVS">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.sri.csl.pvs.plugin.preferences.PreferenceInitializer">
      </initializer>
   </extension>


</plugin>
