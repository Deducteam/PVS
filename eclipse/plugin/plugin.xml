<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>





   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="PVS Editor"
            extensions="pvs"
            icon="icons/pvslogo.png"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="com.sri.csl.pvs.plugin.editor.PVSEditor"
            id="com.sri.csl.pvs.plugin.editor.PVSEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="com.sri.csl.pvs.plugin.ActionSet"
            label="PVS Menu"
            visible="true">
         <menu
               id="pvsMenu"
               label="&amp;PVS">
            <separator
                  name="pvsGroup">
            </separator>
         </menu>
         <menu
               id="pvsHelpMenu"
               label="Help">
            <separator
                  name="pvsHelpGroup">
            </separator>
         </menu>
         <action
               class="com.sri.csl.pvs.plugin.action.StartPVS"
               icon="icons/pvslogo.png"
               id="com.sri.csl.pvs.plugin.action.StartPVS"
               label="&amp;Start PVS"
               menubarPath="pvsMenu/pvsGroup"
               toolbarPath="pvsGroup"
               tooltip="Start PVS">
         </action>
         <action
               class="com.sri.csl.pvs.plugin.action.GettingHelp"
               id="com.sri.csl.pvs.plugin.action.GettingHelp"
               label="&amp;Getting Help"
               menubarPath="pvsMenu/pvsGroup/pvsHelpMenu"
               tooltip="Get Help">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.sri.csl.pvs.plugin.preferences.PVSPreferencePage"
            id="com.sri.csl.pvs.plugin.preferences.PVSPreferencePage"
            name="PVS">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.sri.csl.pvs.plugin.preferences.PreferenceInitializer">
      </initializer>
   </extension>


</plugin>
