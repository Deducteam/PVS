%% stdexc.pvs
%% Definition of exception type
%% Release PVSio-2.d (11/09/05)

stdexc[T:TYPE+] : THEORY
BEGIN

  ExceptionTag : TYPE = string

  Exception : TYPE = [#
    tag : ExceptionTag,
    val : T
  #]

  make_exc(e:ExceptionTag,t:T) : Exception = (#
    tag := e,
    val := t
  #)

END stdexc
